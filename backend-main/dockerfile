FROM node:18-alpine

WORKDIR /app

# Copia os arquivos de dependência
COPY package*.json ./
COPY package-lock.json ./

# Instala as dependências
RUN npm install

# Copia TODO o código
COPY . .

# Cria a pasta uploads se não existir
RUN mkdir -p uploads

# Expõe a porta da aplicação
EXPOSE 3003

# ✅ CORREÇÃO: Use server.js em vez de app.js
CMD ["node", "server.js"]